<section>
  <div class="container">
    <div class="addprdct-btn mb-3">
      <a href="/admin/add-product" class="btn btn-success mt-3">Add Product</a>
    </div>
    <div class="mt-3 mb-4">
      <table class="table" id="productTable">
      <thead>
        <tr>
          {{!-- <th scope="col">#</th> --}}
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col">Price</th>
          <th scope="col">Image</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            {{!-- <th scope="row">{{@index}}</th> --}}
            <td>{{this.Name}}</td>
            <td>{{this.Description}}</td>
            <td>{{this.Price}}</td>
            <td><img
                style="width: 3rem ;height: 3rem"
                src="/product-images/{{this._id}}.jpg"
                alt=""
              /></td>
            <td>
              <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
              <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.Name}} ?')">Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    </div>
  </div>
</section>
<script>
  let table = new DataTable('#productTable');

</script>