<section>
  <div class="container mt-2 p-1">
    <div class="row mt-2">
      {{#each products}}
        <div class="col-md-3">
          <div class="card p-1 m-2" style="width: 17rem;">
            <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="..." />
            <div class="card-body">
              <h4 class="card-title">{{this.Name}}</h4>
              <p class="card-text">{{this.Description}}</p>
              <h5 class="card-text">Rs. {{this.Price}}</h5>
              <p class="card-text">500 gm</p>
              <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>